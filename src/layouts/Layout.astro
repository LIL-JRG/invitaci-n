---
import '@fontsource/berkshire-swash';
import '@fontsource/lora';
import '@fontsource/playfair-display';
import Navigation from '../components/Navigation.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Willy Wonka Themed Event Invitation" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-wonka-purple/10 text-wonka-purple">
    <Navigation />
    <slot />
    <script>
      import { gsap } from 'gsap';
      import { ScrollTrigger } from 'gsap/ScrollTrigger';
      
      gsap.registerPlugin(ScrollTrigger);
      
      // Initialize animations
      gsap.utils.toArray('.fade-in').forEach((element: any) => {
        gsap.from(element, {
          opacity: 0,
          y: 50,
          duration: 1,
          scrollTrigger: {
            trigger: element,
            start: 'top 80%',
            toggleActions: 'play none none reverse'
          }
        });
      });

      // Add parallax effect to floating elements
      gsap.utils.toArray('.parallax').forEach((element: any) => {
        gsap.to(element, {
          y: -50,
          ease: "none",
          scrollTrigger: {
            trigger: element,
            start: "top bottom",
            end: "bottom top",
            scrub: 1
          }
        });
      });
    </script>
  </body>
</html>

<style is:global>
  html {
    font-family: 'Alice', serif;
    background: #FDF6E3;
  }
  h1, h2, h3, h4, h5, h6 {
    font-family: 'Playfair Display', serif;
  }
  .font-wonka {
    font-family: 'Berkshire Swash', cursive;
  }
  
  /* Custom scrollbar */
  ::-webkit-scrollbar {
    width: 12px;
  }
  
  ::-webkit-scrollbar-track {
    background: #f1e6ff;
    border-radius: 6px;
  }
  
  ::-webkit-scrollbar-thumb {
    background: linear-gradient(45deg, #5D1D88, #FF69B4);
    border-radius: 6px;
    border: 3px solid #f1e6ff;
  }
  
  ::-webkit-scrollbar-thumb:hover {
    background: linear-gradient(45deg, #4a1770, #ff4aa4);
  }
</style>