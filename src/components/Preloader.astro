<div id="preloader" class="fixed inset-0 z-50 flex items-center justify-center overflow-hidden">
  <div class="swirl-background-container">
    <div class="swirl-background"></div>
  </div>
  <div class="text-center relative z-10">
    <div class="golden-ticket cursor-pointer transform hover:scale-105 transition-transform duration-300">
      <div class="max-w-md">
        <button id="open-invitation">
          <img src="/wonkadorado.png" alt="Wonka Ticket" class="max-w-full h-auto">
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  const preloader = document.getElementById('preloader');
  const openButton = document.getElementById('open-invitation');

  openButton?.addEventListener('click', () => {
    preloader?.classList.add('fade-out');
    setTimeout(() => {
      preloader?.classList.add('hidden');
      document.body.classList.remove('overflow-hidden');
    }, 1000);
  });

  // Prevent scrolling when preloader is visible
  document.body.classList.add('overflow-hidden');
</script>

<style>
  .swirl-background-container {
    position: absolute;
    inset: -25%;
    overflow: hidden;
  }

  .swirl-background {
    position: absolute;
    inset: 0;
    background-image: url('/background.jpg');
    background-position: center;
    background-size: cover;
    animation: rotateBackground 40s linear infinite;
    transform-origin: center;
  }

  @keyframes rotateBackground {
    0% {
      transform: rotate(0deg) scale(1.8);
    }
    100% {
      transform: rotate(360deg) scale(1.8);
    }
  }

  .fade-out {
    animation: fadeOut 1s ease-in-out forwards;
  }

  @keyframes fadeOut {
    from {
      opacity: 1;
    }
    to {
      opacity: 0;
    }
  }

  .golden-ticket {
    animation: float 6s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-20px);
    }
  }
</style></content></file>
